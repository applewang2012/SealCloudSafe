<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e3e3"
     >
     
    <FrameLayout
		android:id="@+id/id_home_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:paddingBottom="@dimen/base_dimen_104"
		android:persistentDrawingCache="animation"
		/>
    <LinearLayout
           
           android:layout_width="fill_parent"
           android:layout_height="@dimen/base_dimen_104"
           android:layout_gravity="bottom"
           android:orientation="horizontal"
           android:background="#ffffff"
           >
           <LinearLayout 
               android:id="@+id/id_home_seal_status"
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:id="@+id/id_home_seal_status_icon"
                   android:layout_width="@dimen/base_dimen_57"
	           	   android:layout_height="@dimen/base_dimen_53"
	           	   android:layout_marginTop="@dimen/base_dimen_12"
	           	   android:background="@drawable/home_tab_sign_status_press"
	           	   
                   />
               <TextView 
                   android:id="@+id/id_home_seal_status_text"
                   android:layout_width="wrap_content"
	           	   android:layout_height="wrap_content"
	           	   android:textColor="#d43c33"
	           	   android:layout_marginTop="@dimen/base_dimen_5"
	           	   android:textSize="@dimen/base_dimen_20"
	           	   android:text="印章状态"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
         
           <FrameLayout 
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <Button
                   android:id="@+id/id_home_tab_add_sign_button"
                   android:layout_width="@dimen/base_dimen_90"
	           	   android:layout_height="@dimen/base_dimen_90"
	           	   android:background="@drawable/home_tab_add_sign_info"
	           	   android:layout_gravity="center"
                   />
           </FrameLayout>
           
           <LinearLayout 
               android:id="@+id/id_home_seal_self_center"
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1"
	           android:orientation="vertical"
	           android:clickable="true"
	           android:gravity="center_horizontal"
               >
               <ImageView
                   android:id="@+id/id_home_seal_self_center_icon"
                   android:layout_width="@dimen/base_dimen_57"
	           	   android:layout_height="@dimen/base_dimen_53"
	           	   android:layout_marginTop="@dimen/base_dimen_12"
	           	   android:background="@drawable/home_tab_self_normal"
                   />
               <TextView 
                   android:id="@+id/id_home_seal_self_center_text"
                   android:layout_width="wrap_content"
	           	   android:layout_height="wrap_content"
	           	   android:textColor="#999999"
	           	   android:layout_marginTop="@dimen/base_dimen_5"
	           	   android:textSize="@dimen/base_dimen_20"
	           	   android:text="个人中心"
	           	   android:gravity="center_horizontal"
                   />
           </LinearLayout>
   </LinearLayout>
   
	  
</FrameLayout>
