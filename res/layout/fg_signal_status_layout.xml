<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f3"
     >
     <include
        android:id="@+id/id_common_title_bar"
        android:visibility="visible"
        layout="@layout/titlebar_new_style"
       />
     
     <FrameLayout
	        android:id="@+id/id_viewflow_framelayout"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/base_dimen_280"
	        android:layout_marginTop="@dimen/base_dimen_90"
	         >
	
	        <plugin.safe.cloud.seal.widget.ViewFlow
	            android:id="@+id/id_fragment_surround_life_viewflow"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            />
	
		        <FrameLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="bottom"
		            android:background="@color/transparent"
		            android:gravity="center"
		            >
			       <plugin.safe.cloud.seal.widget.CircleFlowIndicator
			            android:id="@+id/id_fragment_surround_life_viewflow_indicator"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_horizontal|bottom"
			            android:padding="2dip"
			            app:activeColor="#ff0000"
			            app:activeType="fill"
			            app:circleSeparation="20dip"
			            app:inactiveColor="#ffffff"
			            app:inactiveType="fill"
			            app:radius="4dip"
			            />
	        </FrameLayout>
        </FrameLayout>
        
   
   <ListView
            android:id="@+id/id_seal_status_fragment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/base_dimen_380"
			android:cacheColorHint="#00000000"
			android:divider="#00000000"
		    android:fadingEdge="none"
		    android:background="#f1f2f3"
		    android:dividerHeight="@dimen/base_dimen_10"
             />
   
   <TextView
       android:id="@+id/id_seal_status_fragment_empty"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="快申请您的第一个印章吧！"
       android:textColor="#555555"
       android:visibility="invisible"
       android:textSize="@dimen/base_dimen_40"
       />
   
   <include
            android:id="@+id/id_data_loading"
            layout="@layout/layout_loading_dialog" />
     
	  
</FrameLayout>
