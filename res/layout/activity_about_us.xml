<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f5"
        android:orientation="vertical"
         >


        <ImageView
            android:layout_width="@dimen/base_dimen_144"
            android:layout_height="@dimen/base_dimen_144"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_130"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/id_about_us_current_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:gravity="center_horizontal"
            android:text="V"
            android:textColor="#666666"
            android:textSize="@dimen/base_dimen_28" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_95"
            android:layout_marginTop="@dimen/base_dimen_70"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_dimen_30"
            android:text="服务条款"
            android:textColor="#666666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="#f1f1f5" />

        <Button
            android:id="@+id/id_about_us_check_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_95"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_dimen_30"
            android:text="检测新版本"
            android:textColor="#666666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="#f1f1f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_95"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/base_dimen_30"
                android:text="官方地址"
                android:textColor="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_dimen_305"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/base_dimen_28" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="#f1f1f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_95"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/base_dimen_30"
                android:text="联系方式"
                android:textColor="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_dimen_370"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/base_dimen_28" />
        </LinearLayout>
    </LinearLayout>
    
    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       /> 

</FrameLayout>