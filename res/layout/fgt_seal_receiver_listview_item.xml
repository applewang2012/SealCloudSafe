<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" 
    android:layout_height="@dimen/base_dimen_130"
    android:background="#ffffff"
    >
    <FrameLayout 
        android:layout_width="fill_parent" 
    	android:layout_height="@dimen/base_dimen_69"
    	android:orientation="horizontal"
        >
        
        <TextView 
	        android:id="@+id/id_seal_receiver_item_type"
	        android:layout_width="wrap_content" 
	    	android:layout_height="fill_parent"
	    	android:layout_marginLeft="@dimen/base_dimen_40"
	    	android:singleLine="true"
	    	android:textColor="#555555"
	    	android:textStyle="bold"
	    	android:textSize="@dimen/base_dimen_28"
	    	android:text="财务专用章"
	    	android:gravity="left|center_vertical"
        />
        
        <Button 
	        android:id="@+id/id_seal_receiver_item_button"
	        android:layout_width="@dimen/base_dimen_80"
	    	android:layout_height="@dimen/base_dimen_55"
	    	android:layout_marginRight="@dimen/base_dimen_40"
	    	android:layout_gravity="right|center_vertical"
	    	android:textColor="#555555"
			android:background="#e5e3e3"
	    	android:textSize="@dimen/base_dimen_28"
	    	android:text="接收"
	    	android:gravity="center"
	        />
    </FrameLayout>
    <ImageView 
        android:layout_width="match_parent" 
    	android:layout_height="@dimen/base_dimen_1"
    	android:layout_marginTop="@dimen/base_dimen_69"
    	android:background="#cccccc"
    	android:layout_gravity="center_horizontal"
        />
    <FrameLayout 
        android:layout_width="fill_parent" 
    	android:layout_height="@dimen/base_dimen_60"
    	android:layout_marginTop="@dimen/base_dimen_70"
        >
        <TextView 
	        android:id="@+id/id_seal_receiver_item_corporation"
	        android:layout_width="wrap_content" 
	    	android:layout_height="fill_parent"
	    	android:layout_marginLeft="@dimen/base_dimen_40"
	    	android:singleLine="true"
	    	android:textColor="#b2b2b2"
	    	android:textSize="@dimen/base_dimen_24"
	    	android:text="财务专用章"
	    	android:gravity="left|center_vertical"
        />
        
        <TextView 
	        android:id="@+id/id_seal_receiver_item_apply_date"
	        android:layout_width="wrap_content" 
	    	android:layout_height="fill_parent"
	    	android:layout_marginRight="@dimen/base_dimen_40"
	    	android:layout_gravity="right"
	    	android:textColor="#b2b2b2"
	    	android:textSize="@dimen/base_dimen_24"
	    	android:text="申请时间"
	    	android:gravity="right|center_vertical"
	        />
    </FrameLayout>
    
	    
</FrameLayout>