<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
     >
     <ScrollView 
         android:layout_width="fill_parent"  
         android:layout_height="fill_parent">  
     	<LinearLayout 
             android:layout_width="fill_parent"  
        	 android:layout_height="fill_parent"
        	 android:gravity="center_horizontal"
        	 android:orientation="vertical">
        	 <ImageView 
        	     android:layout_width="@dimen/base_dimen_144"
	        	 android:layout_height="@dimen/base_dimen_144"
	        	 android:layout_marginTop="@dimen/base_dimen_188"
	        	 android:background="#83ff32"
        	     />
        	 <ImageView 
        	     android:layout_width="@dimen/base_dimen_177"
	        	 android:layout_height="@dimen/base_dimen_35"
	        	 android:layout_marginTop="@dimen/base_dimen_30"
	        	 android:background="#8323ff"
        	     />
        	 <FrameLayout 
		        android:layout_width="@dimen/base_dimen_520"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/base_dimen_150"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_34"
		        	android:layout_height="@dimen/base_dimen_34"
		        	android:background="@drawable/login_username"
	        	    />
	        	<EditText 
	        	        android:id="@+id/id_login_username"
	        	         android:layout_width="match_parent"
		        		 android:layout_height="@dimen/base_dimen_34"
		        		 android:hint="请输入用户名"
		        		 android:digits="@string/edit_input"
		        		 android:gravity="center_vertical"
		        		 android:layout_marginLeft="@dimen/base_dimen_48"
		        		 android:background="#00000000"
		        		 android:textSize="@dimen/base_dimen_28"
		        		 android:textColorHint="#cccccc"
		        		 android:textColor="#000000"
	        	        />
	        	<ImageView 
	        	    android:layout_width="match_parent"
		        	android:layout_height="@dimen/base_dimen_1"
		        	android:layout_marginTop="@dimen/base_dimen_44"
		        	android:background="#cccccc"
	        	    />
	       	</FrameLayout>
	       	<FrameLayout 
		        android:layout_width="@dimen/base_dimen_520"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/base_dimen_34"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_30"
		        	android:layout_height="@dimen/base_dimen_38"
		        	android:background="@drawable/login_lock"
	        	    />
	        	<EditText 
	        	        android:id="@+id/id_login_password"
	        	         android:layout_width="match_parent"
		        		 android:layout_height="@dimen/base_dimen_38"
		        		 android:layout_marginLeft="@dimen/base_dimen_48"
		        		 android:hint="请输入密码"
		        		 android:digits="@string/edit_input"
		        		 android:inputType="textPassword"
		        		 android:gravity="center_vertical"
		        		 android:textSize="@dimen/base_dimen_28"
		        		 android:background="#00000000"
		        		 android:textColorHint="#cccccc"
		        		 android:textColor="#000000"
	        	        />
	        	<ImageView 
	        	    android:layout_width="match_parent"
		        	android:layout_height="@dimen/base_dimen_1"
		        	android:layout_marginTop="@dimen/base_dimen_44"
		        	android:background="#cccccc"
	        	    />
	       	</FrameLayout>
             
	        <LinearLayout 
		        android:layout_width="@dimen/base_dimen_520"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/base_dimen_14"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_26"
		        	android:layout_height="@dimen/base_dimen_26"
		        	android:layout_gravity="center_vertical"
		        	android:background="@drawable/login_select_dot"
	        	    />
	        	<TextView 
	        	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_gravity="center_vertical"
		        	android:layout_marginLeft="@dimen/base_dimen_18"
		        	android:text="我已阅读并同意"
		        	android:textSize="@dimen/base_dimen_24"
		        	android:textColor="#ababab"
	        	    />
	        	<TextView 
	        	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_gravity="center_vertical"
		        	android:layout_marginLeft="@dimen/base_dimen_18"
		        	android:text="《用户服务协议》"
		        	android:textSize="@dimen/base_dimen_24"
		        	android:textColor="#337ffd"
	        	    />
	        </LinearLayout>
	        
             <Button 
                 android:id="@+id/id_login_user_button"
                 android:layout_width="@dimen/base_dimen_520"
		         android:layout_height="@dimen/base_dimen_80"
		         android:layout_marginTop="@dimen/base_dimen_50"
		         android:text="登录"
		         android:textColor="@drawable/button_text_selector"
		         android:textSize="@dimen/base_dimen_30"
		         android:gravity="center"
		         android:background="@drawable/button_background_selector"
                 />
             
             <Button 
                 android:id="@+id/id_login_user_register"
                 android:layout_width="@dimen/base_dimen_520"
		         android:layout_height="@dimen/base_dimen_80"
		         android:layout_marginTop="@dimen/base_dimen_31"
		         android:text="注册"
		         android:textColor="@drawable/button_text_selector"
		         android:textSize="@dimen/base_dimen_30"
		         android:gravity="center"
		         android:background="@drawable/button_background_selector"
                 />
             
             <FrameLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/base_dimen_84"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_250"
		        	android:layout_height="@dimen/base_dimen_1"
		        	android:background="#cccccc"
		        	android:layout_gravity="left|center_vertical"
	        	    />
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_250"
		        	android:layout_height="@dimen/base_dimen_1"
		        	android:background="#cccccc"
		        	android:layout_gravity="right|center_vertical"
	        	    />
	        	<TextView 
	        	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_gravity="center"
		        	android:text="第三方登录"
		        	android:gravity="center"
		        	android:textSize="@dimen/base_dimen_30"
		        	android:textColor="#888888"
	        	    />
	       	</FrameLayout>
             <FrameLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/base_dimen_72"
		        android:layout_marginTop="@dimen/base_dimen_44"
		        android:gravity="center_vertical"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_72"
		        	android:layout_height="@dimen/base_dimen_72"
		        	android:background="@drawable/login_qq_icon"
		        	android:layout_marginLeft="@dimen/base_dimen_264"
	        	    />
	             <ImageView 
		        	    android:layout_width="@dimen/base_dimen_72"
			        	android:layout_height="@dimen/base_dimen_72"
			        	android:background="@drawable/login_wechat_icon"
			        	android:layout_gravity="right"
			        	android:layout_marginRight="@dimen/base_dimen_264"
	        	    />
	        </FrameLayout>
             
             <LinearLayout 
	        	    android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:orientation="horizontal"
		        	android:layout_marginLeft="30dp"
		         	android:layout_marginRight="30dp"
		        	android:gravity="center_vertical"
		        	android:visibility="gone"
	        	    >
	        	<Button 
	                 android:id="@+id/id_login_user_register"
	                 android:layout_width="0dp"
			         android:layout_height="50dp"
			         android:layout_weight="1"
			         android:gravity="center"
			         android:text="立即注册"
			         android:textColor="#888888"
		         	 android:textSize="13dp"
		         	 android:background="#00000000"
			         />
	        	<ImageView 
	        	    android:layout_width="1dp"
		        	android:layout_height="20dp"
		        	android:background="#7f000000"
		        	android:layout_marginBottom="5dp"
	        	     />
	        	<Button 
	                 android:id="@+id/id_login_user_modify_password"
	                  android:layout_width="0dp"
			         android:layout_height="50dp"
			         android:layout_weight="1"
			         android:gravity="center"
			         android:text="修改密码"
			         android:textColor="#888888"
		         	 android:textSize="13dp"
		         	 android:background="#00000000"
			         />
	        </LinearLayout>
	         
             
	       </LinearLayout>
	       
     </ScrollView>

    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       />
	       
</FrameLayout>
