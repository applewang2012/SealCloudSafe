<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/linear_layout_avator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_130" >

        <TextView
            android:layout_width="@dimen/base_dimen_68"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_34"
            android:text="头像"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_32" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_456"
            android:src="@drawable/avator" />

        <ImageView
            android:layout_width="@dimen/base_dimen_44"
            android:layout_height="@dimen/base_dimen_44"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:src="@drawable/seal_list_more_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/linear_layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_130" >

        <TextView
            android:layout_width="@dimen/base_dimen_68"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_34"
            android:text="姓名"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_32" />

        <TextView
            android:id="@+id/personal_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_510"
            android:text="吴承恩"
            android:textColor="#b2b2b2"
            android:textSize="@dimen/base_dimen_26" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/linear_layout_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_130" >

        <TextView
            android:layout_width="@dimen/base_dimen_98"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_34"
            android:text="手机号"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_32" />

         <TextView
             android:id="@+id/personal_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_400"
            
            android:textColor="#b2b2b2"
            android:textSize="@dimen/base_dimen_26" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/linear_layout_idcard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_130" >

        <TextView
            android:layout_width="@dimen/base_dimen_128"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_34"
            android:text="身份证号"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_32" />

        <TextView
            android:id="@+id/personal_info_idcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_373"
            android:src="@drawable/seal_list_more_icon"
            android:text="120281***26"
            android:textColor="#b2b2b2"
            android:textSize="@dimen/base_dimen_26" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/about_us_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_130" >

        <TextView
            
            android:layout_width="@dimen/base_dimen_128"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_34"
            android:text="关于我们"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_32" />

        <ImageView
            android:layout_width="@dimen/base_dimen_44"
            android:layout_height="@dimen/base_dimen_44"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_498"
            android:src="@drawable/seal_list_more_icon" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:background="#cccccc" />


    <LinearLayout
        android:id="@+id/id_my_seal_exit_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_130" >

        <TextView

            android:layout_width="@dimen/base_dimen_128"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_34"
            android:text="退出登录"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_32" />

        <ImageView
            android:layout_width="@dimen/base_dimen_44"
            android:layout_height="@dimen/base_dimen_44"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_498"
            android:src="@drawable/seal_list_more_icon" />
    </LinearLayout>

</LinearLayout>