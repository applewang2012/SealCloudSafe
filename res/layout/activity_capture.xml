<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.yanzhenjie.zbar.camera.CameraPreview
                android:id="@+id/capture_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:id="@+id/capture_crop_view"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/capture_scan_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qr_scan_line"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/qr_scan_frame"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/capture_mask_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/capture_crop_view"
                android:layout_alignParentTop="true"
                android:background="@drawable/qr_scan_shadow"/>

            <ImageView
                android:id="@+id/capture_mask_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/capture_crop_view"
                android:background="@drawable/qr_scan_shadow"/>

            <ImageView
                android:id="@+id/capture_mask_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/capture_mask_bottom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/capture_mask_top"
                android:layout_toLeftOf="@id/capture_crop_view"
                android:layout_toStartOf="@id/capture_crop_view"
                android:background="@drawable/qr_scan_shadow"/>

            <ImageView
                android:id="@+id/capture_mask_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@id/capture_mask_bottom"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/capture_mask_top"
                android:layout_toEndOf="@id/capture_crop_view"
                android:layout_toRightOf="@id/capture_crop_view"
                android:background="@drawable/qr_scan_shadow"/>

            <Button
                android:id="@+id/capture_restart_scan"
                android:layout_width="@dimen/base_dimen_520"
                android:layout_height="@dimen/base_dimen_80"
                android:layout_gravity="center_horizontal"
                android:text="开  始"
                android:textColor="@drawable/button_text_selector"
                android:textSize="@dimen/base_dimen_30"
                android:gravity="center"
                android:background="@drawable/button_background_selector"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请将二维码放入取景框内"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginBottom="18dp"
                android:layout_above="@+id/capture_restart_scan"
                android:layout_alignParentStart="true" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>







