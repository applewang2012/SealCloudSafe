<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
     >
    <ScrollView 
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:layout_marginBottom="65dp"
        >
		<LinearLayout
		    android:layout_width="match_parent"
	   		android:layout_height="wrap_content" 
	   		android:orientation="vertical"
		    >
		    <EditText
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/base_dimen_90"
        		android:background="#337ffd"
	            android:text="请输入文件名"
	            android:textColor="#ffffff"
	            android:gravity="center"
	            android:textStyle="bold"
	            android:textSize="@dimen/base_dimen_38" />
			 <EditText
		        android:layout_width="fill_parent"
		        android:layout_height="100dp"
		        android:layout_margin="8dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:gravity="center_vertical"
		        android:textSize="18dp"
		        android:text="请输入印张名"       
		        android:background="@null" />
			 
			 <TextView
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/base_dimen_90"
        		android:background="#337ffd"
	            android:text="请添加文件（建议少于5张）"
	            android:textColor="#ffffff"
	            android:gravity="center"
	            android:textStyle="bold"
	            android:textSize="@dimen/base_dimen_38" />
			 
			 <TextView
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/base_dimen_90"
        		android:background="#337ffd"
	            android:text="建议保存文件头、尾、骑缝及关键敏感内容"
	            android:textColor="#ffffff"
	            android:gravity="center"
	            android:textStyle="bold"
	            android:textSize="@dimen/base_dimen_38" />
		
		    <GridView 
		        android:id="@+id/noScrollgridview"
		        android:layout_width="match_parent"
		        android:layout_height="400dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:horizontalSpacing="5dp"    
		        android:verticalSpacing="10dp"    
		        android:numColumns="2"
		        android:scrollbars="none"
		        >
	    	</GridView>
		</LinearLayout>
	</ScrollView>
    
    
   <Button 
        android:id="@+id/id_upload_selected_image"
        android:layout_width="@dimen/base_dimen_520"
		android:layout_height="@dimen/base_dimen_80"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginBottom="@dimen/base_dimen_50"
		android:text="上		传"
		android:textColor="@drawable/button_text_selector"
		android:textSize="@dimen/base_dimen_30"
		android:gravity="center"
		android:background="@drawable/button_background_selector"
      />
   
    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       />

</FrameLayout>