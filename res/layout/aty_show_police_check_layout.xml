<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
     >
     <FrameLayout 
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:layout_marginBottom="@dimen/base_dimen_10"
        > 
		<LinearLayout
		    android:layout_width="match_parent"
	   		android:layout_height="match_parent" 
	   		android:orientation="vertical"
		    >
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/base_dimen_110"
				android:orientation="horizontal"
				android:background="#ffffff"
				>
				<TextView
					android:id="@+id/id_police_check_danwei_name"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textColor="#444444"
					android:textColorHint="#999999"
					android:layout_gravity="center_vertical"
					android:background="#ffffff"
					android:text="单位名称："
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:textSize="@dimen/base_dimen_30" />
				<TextView
					android:id="@+id/id_police_check_danwei_name_show"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:layout_gravity="center_vertical"
					android:textColor="#666666"
					android:textColorHint="#999999"
					android:textSize="@dimen/base_dimen_30"
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:text=""
					android:background="#00000000" />
			</LinearLayout>

		 <ImageView
			 android:layout_width="match_parent"
			 android:layout_height="@dimen/base_dimen_1"
			 android:background="#f1f1f1"/>
		 <LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="@dimen/base_dimen_110"
			 android:orientation="horizontal"
			 android:background="#ffffff"
		 >
		 <TextView
			 android:id="@+id/id_police_check_neirong_name"
			 android:layout_width="wrap_content"
			 android:layout_height="match_parent"
			 android:gravity="center_vertical"
			 android:textColor="#444444"
			 android:textColorHint="#999999"
			 android:layout_gravity="center_vertical"
			 android:background="#ffffff"
			 android:text="检查内容："
			 android:layout_marginLeft="@dimen/base_dimen_30"
			 android:textSize="@dimen/base_dimen_30" />
		 <TextView
			 android:id="@+id/id_police_check_neirong_show"
			 android:layout_width="wrap_content"
			 android:layout_height="match_parent"
			 android:gravity="center_vertical"
			 android:layout_gravity="center_vertical"
			 android:textColor="#666666"
			 android:textColorHint="#999999"
			 android:textSize="@dimen/base_dimen_30"
			 android:layout_marginLeft="@dimen/base_dimen_30"
			 android:text=""
			 android:background="#00000000" />
	 </LinearLayout>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="@dimen/base_dimen_1"
				android:background="#f1f1f1"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/base_dimen_110"
				android:orientation="horizontal"
				android:background="#ffffff"
				>
				<TextView
					android:id="@+id/id_police_check_zhenggai_name"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textColor="#444444"
					android:textColorHint="#999999"
					android:layout_gravity="center_vertical"
					android:background="#ffffff"
					android:text="是否整改："
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:textSize="@dimen/base_dimen_30" />
				<LinearLayout
					android:id="@+id/id_police_check_zhenggai_yes"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/base_dimen_110"
					android:gravity="center_vertical"
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/id_police_check_zhenggai_show_yes_icon"
						android:layout_width="@dimen/base_dimen_30"
						android:layout_height="@dimen/base_dimen_30"
						android:background="@drawable/select_normal"

						/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textColor="#444444"
						android:text="是"
						android:textSize="@dimen/base_dimen_30"
						android:layout_marginLeft="@dimen/base_dimen_18"
						android:background="#00000000" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/id_police_check_zhenggai_no"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/base_dimen_110"
					android:gravity="center_vertical"
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:orientation="horizontal">
				<ImageView
					android:id="@+id/id_police_check_zhenggai_show_no_icon"
					android:layout_width="@dimen/base_dimen_30"
					android:layout_height="@dimen/base_dimen_30"
					android:background="@drawable/select_selected"

					/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textColor="#444444"
					android:text="否"
					android:textSize="@dimen/base_dimen_30"
					android:layout_marginLeft="@dimen/base_dimen_18"
					android:background="#00000000" />
					</LinearLayout>
			</LinearLayout>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="@dimen/base_dimen_1"
				android:background="#f1f1f1"/>
			<LinearLayout
				android:id="@+id/id_police_check_zhenggai_neirong_content"
				android:layout_width="match_parent"
				android:layout_height="@dimen/base_dimen_110"
				android:orientation="horizontal"
				android:background="#ffffff"
				>
				<TextView
					android:id="@+id/id_police_check_zhenggai_neirong_name"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textColor="#444444"
					android:textColorHint="#999999"
					android:layout_gravity="center_vertical"
					android:background="#ffffff"
					android:text="整改内容："
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:textSize="@dimen/base_dimen_30" />
				<TextView
					android:id="@+id/id_police_check_zhenggai_neirong_show"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:layout_gravity="center_vertical"
					android:textColor="#666666"
					android:textColorHint="#999999"
					android:textSize="@dimen/base_dimen_30"
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:text=""
					android:background="#00000000" />
			</LinearLayout>
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="@dimen/base_dimen_1"
				android:background="#f1f1f1"/>
			<LinearLayout
				android:id="@+id/id_police_check_zhenggai_condition_content"
				android:layout_width="match_parent"
				android:layout_height="@dimen/base_dimen_110"
				android:orientation="horizontal"
				android:background="#ffffff"
				>
				<TextView
					android:id="@+id/id_police_check_zhenggai_condition_name"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textColor="#444444"
					android:textColorHint="#999999"
					android:layout_gravity="center_vertical"
					android:background="#ffffff"
					android:text="整改情况："
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:textSize="@dimen/base_dimen_30" />
				<EditText
					android:id="@+id/id_police_check_zhenggai_condition_show"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:layout_gravity="center_vertical"
					android:textColor="#666666"
					android:textColorHint="#999999"
					android:textSize="@dimen/base_dimen_30"
					android:layout_marginLeft="@dimen/base_dimen_30"
					android:text=""
					android:hint="请输入整改情况"
					android:background="#00000000" />
			</LinearLayout>

		 <LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="@dimen/base_dimen_80"
			 android:orientation="horizontal"
			 android:layout_marginLeft="@dimen/base_dimen_30"
			 android:layout_marginRight="@dimen/base_dimen_30"
			 android:layout_marginTop="@dimen/base_dimen_30"
			 >
			 <Button
				 android:id="@+id/id_police_check_zhenggai_button_positive"
				 android:layout_width="0dp"
				 android:layout_height="@dimen/base_dimen_80"
				 android:layout_weight="1"
				 android:text="确认已整改"
				 android:textColor="@drawable/button_text_selector"
				 android:textSize="@dimen/base_dimen_30"
				 android:gravity="center"
				 android:background="@drawable/button_background_selector"
				 />
			 <Button
				 android:id="@+id/id_police_check_zhenggai_button_negativie"
				 android:layout_width="0dp"
				 android:layout_height="@dimen/base_dimen_80"
				 android:layout_weight="1"
				 android:text="继续整改"
				 android:textColor="@drawable/button_text_selector"
				 android:layout_marginLeft="@dimen/base_dimen_20"
				 android:textSize="@dimen/base_dimen_30"
				 android:gravity="center"
				 android:background="@drawable/button_background_selector"
				 />
			 </LinearLayout>

		</LinearLayout>
		

		   <include
		        android:id="@+id/id_data_loading"
			   android:visibility="invisible"
		        layout="@layout/layout_loading_dialog"
	       />

</FrameLayout>
</ScrollView>
    
   
   
