<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e3e3"
     >
    <LinearLayout 
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <FrameLayout
	         android:layout_width="@dimen/base_dimen_598"  
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginTop="@dimen/base_dimen_80"
	         >
	         <ImageView 
	             android:layout_width="@dimen/base_dimen_598"  
		         android:layout_height="@dimen/base_dimen_40"
		         android:layout_gravity="center_horizontal"
		         android:background="@drawable/activity_register_step_progress_bg"
	             />
	         <ImageView 
		             android:layout_width="@dimen/base_dimen_402"  
			         android:layout_height="@dimen/base_dimen_40"
			         android:layout_gravity="left"
			         android:background="@drawable/activity_register_step2_progress"
		             />
	         <LinearLayout
		         android:layout_width="match_parent"  
		         android:layout_height="@dimen/base_dimen_90"
		         android:orientation="horizontal"
		         >
	             <LinearLayout
		         android:layout_width="0dp"  
		         android:layout_height="@dimen/base_dimen_90"
		         android:layout_weight="1"
		         android:orientation="vertical"
		         >
		         <!-- <ImageView 
		             android:layout_width="match_parent"  
			         android:layout_height="@dimen/base_dimen_40"
			         android:layout_gravity="center_horizontal"
			         android:background="@drawable/activity_register_step_progress"
		             /> -->
	         	<TextView 
		             android:layout_width="match_parent"  
			         android:layout_height="match_parent"
			         android:layout_weight="1"
			         android:gravity="center"
			         android:textColor="#d43c33"
			         android:layout_marginTop="@dimen/base_dimen_40"
			         android:textSize="@dimen/base_dimen_26"
			         android:text="手机注册"
		             />
	         </LinearLayout>
	         <LinearLayout
		         android:layout_width="0dp"  
		         android:layout_height="@dimen/base_dimen_90"
		         android:layout_weight="1"
		         android:orientation="vertical"
		         >
		         <TextView 
		             android:layout_width="match_parent"  
			         android:layout_height="match_parent"
			         android:gravity="center"
			         android:textColor="#d43c33"
			         android:layout_marginTop="@dimen/base_dimen_40"
			         android:textSize="@dimen/base_dimen_26"
			         android:text="身份认证"
		             />
	         </LinearLayout>
	         <LinearLayout
		         android:layout_width="0dp"  
		         android:layout_height="@dimen/base_dimen_90"
		         android:layout_weight="1"
		         android:orientation="vertical"
		         >
		         <TextView 
		             android:layout_width="match_parent"  
			         android:layout_height="match_parent"
			         android:layout_weight="1"
			         android:gravity="center"
			         android:textColor="#888888"
			         android:layout_marginTop="@dimen/base_dimen_40"
			         android:textSize="@dimen/base_dimen_26"
			         android:text="注册完成"
		             />
	         </LinearLayout>
	         </LinearLayout>
		         
		</FrameLayout>
	    
        
        <LinearLayout 
            android:layout_width="@dimen/base_dimen_580"  
         	android:layout_height="wrap_content"
         	android:layout_gravity="center_horizontal"
         	android:orientation="vertical"
         	android:layout_marginTop="@dimen/base_dimen_100"
            >
            
              <FrameLayout 	
		        android:layout_width="@dimen/base_dimen_580"
		        android:layout_height="@dimen/base_dimen_108"
		        android:background="@drawable/login_input_username_bg"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_34"
		        	android:layout_height="@dimen/base_dimen_34"
		        	android:background="@drawable/register_input_user_name_icon"
		        	android:layout_gravity="center_vertical"
		        	android:layout_marginLeft="@dimen/base_dimen_24"
	        	    />
	        	<EditText 
	        	        android:id="@+id/id_register_step2_real_username"
	        	         android:layout_width="match_parent"
		        		 android:layout_height="wrap_content"
		        		 android:layout_marginLeft="@dimen/base_dimen_78"
		        		 android:hint="请输入真实姓名"
		        		 android:gravity="center_vertical"
		        		 android:layout_gravity="center_vertical"
		        		 android:background="#00000000"
		        		 android:textSize="@dimen/base_dimen_30"
		        		 android:textColorHint="#b2b2b2"
		        		 android:textColor="#000000"
	        	        />
	       	</FrameLayout>
	       	<FrameLayout 
		        android:layout_width="@dimen/base_dimen_580"
		        android:layout_height="@dimen/base_dimen_108"
		        android:layout_marginTop="-2dp"
		        android:background="@drawable/login_input_password_bg"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_35"
		        	android:layout_height="@dimen/base_dimen_28"
		        	android:background="@drawable/register_input_user_idcard_icon"
		        	android:layout_gravity="center_vertical"
		        	android:layout_marginLeft="@dimen/base_dimen_28"
	        	    />
	        	<EditText 
	        	        android:id="@+id/id_register_step2_idcard"
	        	         android:layout_width="match_parent"
		        		 android:layout_height="wrap_content"
		        		 android:layout_marginLeft="@dimen/base_dimen_78"
		        		 android:layout_gravity="center_vertical"
		        		 android:hint="请输入二代身份证号码"
		        		 android:digits="@string/edit_idcard_input"
		        		 android:maxLength="18"
		        		 android:gravity="center_vertical"
		        		 android:textSize="@dimen/base_dimen_30"
		        		 android:background="#00000000"
		        		 android:textColorHint="#b2b2b2"
		        		 android:textColor="#000000"
	        	        />
	       	</FrameLayout>
        </LinearLayout>
        
	       	<Button 
                 android:id="@+id/id_register_user_step2_next"
                 android:layout_width="@dimen/base_dimen_580"
		         android:layout_height="@dimen/base_dimen_90"
		         android:layout_marginTop="@dimen/base_dimen_88"
		         android:text="下一步"
		         android:textColor="@drawable/button_text_selector"
		         android:textSize="@dimen/base_dimen_30"
		         android:layout_gravity="center_horizontal"
		         android:gravity="center"
		         android:background="@drawable/button_background_selector"
                 />
    </LinearLayout>
    
    
     

    <include
        android:id="@+id/id_data_loading"
        android:visibility="invisible"
        layout="@layout/layout_loading_dialog"
       />
	       
</FrameLayout>
