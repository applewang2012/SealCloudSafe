<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e3e3"
     >
     <ScrollView 
         android:layout_width="fill_parent"  
         android:layout_height="fill_parent">  
     	<LinearLayout 
             android:layout_width="fill_parent"  
        	 android:layout_height="fill_parent"
        	 android:gravity="center_horizontal"
        	 android:orientation="vertical">
        	 <ImageView 
        	     android:layout_width="@dimen/base_dimen_174"
	        	 android:layout_height="@dimen/base_dimen_174"
	        	 android:layout_marginTop="@dimen/base_dimen_226"
	        	 android:background="@drawable/login_icon"
        	     />
        	 <FrameLayout 	
		        android:layout_width="@dimen/base_dimen_580"
		        android:layout_height="@dimen/base_dimen_108"
		        android:layout_marginTop="@dimen/base_dimen_160"
		        android:background="@drawable/login_input_username_bg"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_36"
		        	android:layout_height="@dimen/base_dimen_36"
		        	android:background="@drawable/login_input_username_icon"
		        	android:layout_gravity="center_vertical"
		        	android:layout_marginLeft="@dimen/base_dimen_24"
	        	    />
	        	<EditText 
	        	        android:id="@+id/id_login_username"
	        	         android:layout_width="match_parent"
		        		 android:layout_height="wrap_content"
		        		 android:layout_marginLeft="@dimen/base_dimen_78"
		        		 android:hint="请输入手机号或用户名(数字或英文)"
		        		 android:digits="@string/edit_input"
		        		 android:gravity="center_vertical"
		        		 android:layout_gravity="center_vertical"
		        		 android:background="#00000000"
		        		 android:textSize="@dimen/base_dimen_30"
		        		 android:textColorHint="#b2b2b2"
		        		 android:textColor="#000000"
		        		 android:maxLength="11"
	        	        />
	       	</FrameLayout>
	       	<FrameLayout 
		        android:layout_width="@dimen/base_dimen_580"
		        android:layout_height="@dimen/base_dimen_108"
		        android:layout_marginTop="-2dp"
		        android:background="@drawable/login_input_password_bg"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_28"
		        	android:layout_height="@dimen/base_dimen_38"
		        	android:background="@drawable/login_input_userpassword_icon"
		        	android:layout_gravity="center_vertical"
		        	android:layout_marginLeft="@dimen/base_dimen_28"
	        	    />
	        	<EditText 
	        	        android:id="@+id/id_login_password"
	        	         android:layout_width="match_parent"
		        		 android:layout_height="wrap_content"
		        		 android:layout_marginLeft="@dimen/base_dimen_78"
		        		 android:layout_gravity="center_vertical"
		        		 android:hint="请输入密码"
		        		 android:digits="@string/edit_input"
		        		 android:inputType="textPassword"
		        		 android:gravity="center_vertical"
		        		 android:textSize="@dimen/base_dimen_30"
		        		 android:background="#00000000"
		        		 android:textColorHint="#b2b2b2"
		        		 android:textColor="#000000"
		        		 android:maxLength="16"
	        	        />
	       	</FrameLayout>
             
	        <LinearLayout 
		        android:layout_width="@dimen/base_dimen_520"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/base_dimen_8"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_26"
		        	android:layout_height="@dimen/base_dimen_26"
		        	android:layout_gravity="center_vertical"
		        	android:background="@drawable/login_select_dot"
	        	    />
	        	<TextView 
	        	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_gravity="center_vertical"
		        	android:layout_marginLeft="@dimen/base_dimen_18"
		        	android:text="我已阅读并同意"
		        	android:textSize="@dimen/base_dimen_24"
		        	android:textColor="#ababab"
	        	    />
	        	<TextView 
	        	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_gravity="center_vertical"
		        	android:layout_marginLeft="@dimen/base_dimen_18"
		        	android:text="《用户服务协议》"
		        	android:textSize="@dimen/base_dimen_24"
		        	android:textColor="#d43c33"
	        	    />
	        </LinearLayout>
	        
             <Button 
                 android:id="@+id/id_login_user_button"
                 android:layout_width="@dimen/base_dimen_580"
		         android:layout_height="@dimen/base_dimen_90"
		         android:layout_marginTop="@dimen/base_dimen_84"
		         android:text="登录"
		         android:textColor="#888888"
		         android:textSize="@dimen/base_dimen_32"
		         android:gravity="center"
		         android:background="@drawable/button_click_unclickable"
                 />
             
             <FrameLayout 
	            android:layout_width="@dimen/base_dimen_520"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/base_dimen_10"
	            >
	            <Button 
	                android:id="@+id/id_login_user_register"
	                 android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_gravity="left"
			         android:gravity="center"
			         android:text="立即注册"
			         android:textColor="#888888"
		         	 android:textSize="@dimen/base_dimen_28"
		         	 android:background="#00000000"
	                />
	            <Button 
	                 android:id="@+id/id_login_user_modify_password"
	                  android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_gravity="right"
			         android:text="修改密码"
			         android:textColor="#888888"
		         	 android:textSize="@dimen/base_dimen_28"
		         	 android:background="#00000000"
			         />
	        </FrameLayout>
             
             <FrameLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/base_dimen_84"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_250"
		        	android:layout_height="@dimen/base_dimen_1"
		        	android:background="#cccccc"
		        	android:layout_gravity="left|center_vertical"
	        	    />
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_250"
		        	android:layout_height="@dimen/base_dimen_1"
		        	android:background="#cccccc"
		        	android:layout_gravity="right|center_vertical"
	        	    />
	        	<TextView 
	        	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_gravity="center"
		        	android:text="第三方登录"
		        	android:gravity="center"
		        	android:textSize="@dimen/base_dimen_30"
		        	android:textColor="#888888"
	        	    />
	       	</FrameLayout>
             <FrameLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/base_dimen_72"
		        android:layout_marginTop="@dimen/base_dimen_44"
		        android:gravity="center_vertical"
	        	>
	        	<ImageView 
	        	    android:layout_width="@dimen/base_dimen_72"
		        	android:layout_height="@dimen/base_dimen_72"
		        	android:background="@drawable/login_qq_icon"
		        	android:layout_marginLeft="@dimen/base_dimen_264"
	        	    />
	             <ImageView 
		        	    android:layout_width="@dimen/base_dimen_72"
			        	android:layout_height="@dimen/base_dimen_72"
			        	android:background="@drawable/login_wechat_icon"
			        	android:layout_gravity="right"
			        	android:layout_marginRight="@dimen/base_dimen_264"
	        	    />
	        </FrameLayout>
             
	       </LinearLayout>
	       
     </ScrollView>

    <include
        android:id="@+id/id_data_loading"
        layout="@layout/layout_loading_dialog"
       />
	       
</FrameLayout>
