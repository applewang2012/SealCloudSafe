<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_dimen_150"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/id_seal_upload_add_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_26"
        android:text="营   业   执   照"
        android:textColor="#777777"
        android:textSize="@dimen/base_dimen_28" />

    <ImageView
        android:id="@+id/id_seal_upload_add_file1"
        android:layout_width="@dimen/base_dimen_150"
        android:layout_height="@dimen/base_dimen_150"
        android:layout_marginRight="@dimen/base_dimen_200"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/icon_addpic_unfocused"
        android:clickable="true" />

    <ImageView
        android:id="@+id/id_seal_upload_add_file2"
        android:layout_width="@dimen/base_dimen_150"
        android:layout_height="@dimen/base_dimen_150"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/icon_addpic_unfocused"
        android:clickable="true" />

</FrameLayout>